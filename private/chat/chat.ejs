<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>chat</title>
    <link href="/asset/fontawesome-free/css/all.css" rel="stylesheet" type="text/css">
    <link rel="stylesheet" href="/css/navigation.css">
    <link rel="stylesheet" href="/css/chat.css">
</head>
<body>

    <div class="navigation">
        <div class="link" onclick="window.location.href='/'" ><i class="fas fa-meteor"></i> Feed</div>
        <div class="link active"><i class="fas fa-people-arrows"></i> Message</div>
        <div class="link"><i class="fas fa-satellite"></i> My question</div> 
        <div class="profile" onclick="document.getElementById('control').style.display='block'">
            <div class="load-img"><div class="profile-img" style="background-image: url('/img/user/<%= data[0].username %>.jpg');"></div></div>
            <div class="profile-name"><%= data[0].username %></div>
        </div>
    </div>

    <div id="control" style="display: none;">
        <div class="user" >
            <div class="control">
                <div class="go-profile" onclick="window.location.href='/<%= data[0].username %>'">
                    <div class="load-img"><div class="control-img" style="background-image: url('/img/user/<%= data[0].username %>.jpg');"></div></div>
                    <div style="padding-left: 20px;">
                        <%= data[0].username %> <br>
                        go to profile
                    </div>
                </div>
                <div class="control-link" onclick="document.getElementById('control').style.display='none'"><i class="fas fa-meteor"></i> Back to feed</div>
                <!-- <div class="control-link"><i class="fas fa-code"></i> tongog API</div> -->
                <!-- <div class="control-link"><i class="fas fa-sliders-h"></i> Setting</div> -->
                <div class="control-link" onclick="window.location.href='/logout'"><i class="fas fa-sign-out-alt"></i> Log out</div>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="inbox">
            <div class="inbox-head">Inbox</div>
            <span id="chat"></span>

            <!-- <div class="grid">
                <div class="load-img"><div class="control-img" style="background-image: url('/img/user/<%= data[0].username %>.jpg');"><i class="fas fa-circle dot"></i></div></div>
                <div class="user-info">
                    <span class="user-name"><%= data[0].username %> </span> <br>
                    <div class="last-text">Hello world</div>
                </div>
            </div> -->
        </div>
        
        <div class="chat-content">

        </div>
    </div>

    <script src="/socket.io/socket.io.js"></script>
    <script>
      var socket = io();

      socket.on('<%= data[0].privateCode %>', function(msg) {
        let temp = msg;
        let user = [];

        for(var i=0 ; i < temp.length ; i++){
            var state = 1;
            for(var j=0 ; j < user.length ; j++){
                if(temp[i].form == user[j].form && i != j){
                    state = 0;
                } 
            }
            if(state == 1){
                user.push(temp[i]);
            }
        }

        document.getElementById('chat').innerHTML = '';
        for(var i=0 ; i<user.length ; i++){
            if(user[i].status == 0){
                document.getElementById('chat').innerHTML += '<div class="grid"><div class="load-img2"><div class="control-img" style="background-image: url(\'/img/user/'+user[i].form+'.jpg\');"><i class="fas fa-circle dot"></i></div></div><div class="user-info"><span class="user-name">'+user[i].form+'</span> <br><div class="last-text">'+user[i].text+'</div></div></div>'
            } else {
                document.getElementById('chat').innerHTML += '<div class="grid"><div class="load-img2"><div class="control-img" style="background-image: url(\'/img/user/'+user[i].form+'.jpg\');"><i class="fas fa-circle dot"></i></div></div><div class="user-info"><span class="user-name">'+user[i].form+'</span> <br><div class="readed">'+user[i].text+'</div></div></div>'
            }
        }
      });
    </script>

</body>
</html>